# include <stdio.h>
# define TOT 2

typedef struct {
	char marca[15];
	int ano;
	char cor[10];
	float preco;
} carro;

int main (){
	carro vetcarro[TOT];
	int i;
	float x;
	
	for(i=0; i<TOT; i++){
		printf("Carro %d\n", i+1);
		printf("Qual a marca: ");
		scanf(" %s", vetcarro[i].marca);
		printf("Qual o ano: ");
		scanf(" %d", &vetcarro[i].ano);
		printf("Qual a cor: ");
		scanf(" %s", vetcarro[i].cor);
		printf("Qual o preco: ");
		scanf(" %f", &vetcarro[i].preco);
		printf("\n");
	}
		
	printf("Digite o preco que deseja pagar: ");
	scanf(" %f", &x);
	
	for(i=0; i<TOT; i++){
		if (vetcarro[i].preco <= x){
			printf("Carro %d\n", i+1);
			printf("Marca %s\n", vetcarro[i].marca);
			printf("Cor %s\n", vetcarro[i].cor);
			printf("Ano %d\n", vetcarro[i].ano);
			printf("\n");				
		}
	}	
	return 0;
}
