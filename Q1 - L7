# include <stdio.h>
# define TOT 4

typedef struct {
	char marca[15];
	int ano;
	char cor[10];
	float preco;
} carro;

int main (){
	carro vetcarro[TOT];
	int i,b;
	float x;
	char y[10],a[10],c[10];
	
	for(i=0; i<TOT; i++){
		printf("Carro %d\n", i+1);
		printf("Qual a marca: ");
		scanf(" %s", vetcarro[i].marca);
		printf("Qual o ano: ");
		scanf(" %d", &vetcarro[i].ano);
		printf("Qual a cor: ");
		scanf(" %s", vetcarro[i].cor);
		printf("Qual o preco: ");
		scanf(" %f", &vetcarro[i].preco);
		printf("\n");
	}
		
	printf("Digite o preco que deseja pagar: ");
	scanf(" %f", &x);
	
	for(i=0; i<TOT; i++){
		if (vetcarro[i].preco <= x){
			printf("Carro %d\n", i+1);
			printf("Marca %s\n", vetcarro[i].marca);
			printf("Cor %s\n", vetcarro[i].cor);
			printf("Ano %d\n", vetcarro[i].ano);
			printf("\n");				
		}
	}
	printf("\n");
	
	printf("Diga a marca que deseja: ");
	scanf(" %s", y);
	
	for(i=0; i<TOT; i++){
		if (vetcarro[i].marca == y){
			printf("Carro %d\n", i+1);
			printf("Preco %f\n", vetcarro[i].preco);
			printf("Ano %d\n", vetcarro[i].ano);
			printf("Cor %s\n", vetcarro[i].cor);
			printf("\n");
		}
	}
	printf("\n");
	
	printf("Escreva uma marca: ");
	scanf(" %s", a);
	printf("Digite um ano: ");
	scanf(" %d", &b);
	printf("Escreva a cor: ");
	scanf(" %s", c);
	
	for(i=0; i<TOT; i++){
		if ((vetcarro[i].marca == a) && (vetcarro[i].ano == b) && (vetcarro[i].cor == c)){
			printf("Carro %d\n", i+1);
			printf("Preco %f\n", vetcarro[i].preco);
			printf("\n");
		}
	}
		
	return 0;
}
