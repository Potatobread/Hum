#include <stdio.h>

int main(){
    
    int i = 0, media = 0,salario,tempo,salarioMaior = 0, menosMeses = 0;
    
    while(i < 10){
    	printf("Funcionario %d - Salario: ", i+1);
    	scanf("%d", &salario);
    	printf("Funcionario %d - Tempo: ", i+1);
    	scanf("%d", &tempo);
    	
    	if(tempo < 24)
			menosMeses++;
    	
    	if(salario > 600)
    		salarioMaior++;
    	
		media = media + tempo;
		i++;
	}
	
	printf("\nTotal de Operarios Inferior a 24 meses: %d\n", menosMeses);
	media = media/i;
	printf("Media do Tempo de Servico: %d\n", media);
	salarioMaior = (salarioMaior*100)/i;
	printf("Porcentagem de Operarios de Salario acima de 600: %d\n", salarioMaior);
    
    return 0;
}


.data
	salario: .asciiz "Funcionario - Salario: "
	tempo: .asciiz "Funcionario - Tempo: "
	menosMeses: .asciiz "\nTotal de Operarios de Tempo Inferior a 24 meses: "
	media: .asciiz "\nMedia do Tempo de Servi√ßo: "
	salarioMaior: .asciiz "\nPorcentagem de Operarios de Salario acima de 600: "
	
.text
	move $t0, $zero		# i = 0
	move $t3, $zero 	# menosMeses = 0
	move $t4, $zero 	# salarioMaior = 0
	move $t5, $zero 	# media = 0
		
	while:
		li $v0, 4	
		la $a0, salario
		syscall		

		li $v0,5	
		syscall		
		move $t1, $v0	
		
		li $v0, 4	
		la $a0, tempo
		syscall		

		li $v0,5	
		syscall		
		move $t2, $v0
		#---------------
		slti $t6, $t2, 24
		bne $t6, $zero, ifTempo
		
		slti $t6, $t1, 600
		beq $t6, $zero, ifSalario
		
		add $t5, $t5, $t2
		addi $t0, $t0, 1
		
		j fim
		
		ifTempo:
			addi $t3, $t3, 1
			
			slti $t6, $t1, 600
			beq $t6, $zero, ifSalario
			
			add $t5, $t5, $t2
			addi $t0, $t0, 1
		
			j fim
			
			ifSalario:
				addi $t4, $t4, 1
					
				add $t5, $t5, $t2
				addi $t0, $t0, 1
		
		fim:
		
		beq $t0, 10, final
		j while	
		
		final: 	
			li $v0, 4
			la $a0, menosMeses
			syscall 
			
			li $v0, 1
			move $a0, $t3
			syscall
			#---------------
			div $t6, $t5,$t0
			
			li $v0, 4
			la $a0, media
			syscall 
			
			li $v0, 1
			move $a0, $t6
			syscall
			#---------------
			li $t6, 100
			mult $t4, $t6
			mflo $s1
			div $t6, $s1, $t0
			
			li $v0, 4
			la $a0, salarioMaior
			syscall 
			
			li $v0, 1
			move $a0, $t6
			syscall
			#---------------
