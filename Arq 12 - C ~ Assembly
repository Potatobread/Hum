#include <stdio.h>

int main(){

	float a = 0,i = 1, n;
	
	printf("Digite o numero: ");
	scanf("%f", &n);
	while(i < n+1){
		a = a + (n-i + 1)/i;
		
		i++;
	}
	
	printf("A: %.1f\n", a);
	
	return 0;
}


.data
	numero: .asciiz "Digite o numero: "
	a: .asciiz "\nA: "
	float1: .float 0.0
	float2: .float 1.0
	
.text
	
	li $v0, 4
	la $a0, numero
	syscall
	
	li $v0,6
	syscall
	mov.s $f1, $f0
	
	l.s $f2, float1
	l.s $f3, float2
	l.s $f4, float2
	
	# $f1 = n
	# $f2 = a = 0
	# $f3 = i = 1
	# $f4 = 1
	
	while : 
		sub.s $f5, $f1, $f3
		add.s $f5, $f5, $f4
		div.s $f6, $f5, $f3
		add.s $f2, $f2,$f6
		
		add.s $f3, $f3, $f4
	
		add.s $f7, $f1, $f4
		
	c.lt.s $f3, $f7 # if( f3 < f7 ) >>> True: 1 ; False 0
	bc1f final      #         if(0) >>> final        
	
	j while
	
	final:
		li $v0, 4
		la $a0, a
		syscall
	
		li $v0, 2
		mov.s $f12, $f2
		syscall
