#include <stdio.h>

int main(){
	int x,aux,soma,h=10,total,aux2;
	
	printf("Valor Inicial: ");
	scanf("%d", &x);
	while(x != 0){
		aux = 1;
		aux2 = x;
		soma = 0;
		while(aux <= 10){
			soma += x;
			printf("x%d : %d    ||  TOTAL : %d\n", aux,x,soma);
			x *= 2;
			aux++;
		}
		total = aux2*h;
		total *= h*7;
		printf("\n1 Dia: %d\n", total/7); 
		printf("7 Dias: %d\n", total);
		printf("\n\n");
		printf("Valor Inicial: ");
		scanf("%d", &x);
	}
	
	return 0;
}
