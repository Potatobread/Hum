#include <stdio.h>

int main(){
	int x,aux,soma;
	
	printf("Valor Inicial: ");
	scanf("%d", &x);
	while(x != 0){
		aux = 1;
		soma = 0;
		while(aux <= 10){
			soma += x;
			printf("x%d : %d    ||  TOTAL : %d\n", aux,x,soma);
			x *= 2;
			aux++;
		}
		printf("\n\n");
		printf("Valor Inicial: ");
		scanf("%d", &x);
	}
	
	return 0;
}
