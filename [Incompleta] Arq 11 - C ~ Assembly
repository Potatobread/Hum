#include <stdio.h>

int main(){
    
	float h = 0, numero = 1;

    while(numero != 11){
    	h = h + (numero/(numero * numero));
    	
    	if(numero > 0){
			numero = -numero;
			numero--;
		} else {
			numero = -numero;
			numero++;
		}
	}
	
	printf("H: %.4f\n", h);
    
    return 0;
}


.data
	msg: .asciiz "H: "
	zero: .double 0.00
	um: .double 1.00
	
.text
	move $t0, $zero
	li $t1, 1
	
	#mtc1 $t0, $f1		#  h = 0.00
	#cvt.d.w $f1, $f1	#
	
	lwc1 $f1, zero
	lwc1 $f2, um
	
	#mtc1 $t1, $f2		#  n = 1.00
	#cvt.d.w $f2, $f2	#
		
	while:
		mul.d $f0,$f2,$f2
		
		div.d $f3,$f2,$f0
		
		add.d $f1, $f1, $f3
		
		mtc1 $t0, $f4
		cvt.d.w $f4, $f4
		mtc1 $t1, $f5
		cvt.d.w $f5, $f5
		
		c.lt.d $f2, $f4
		bc1t if
		
		sub.d $f2, $f4, $f2
		add.d $f2, $f2, $f5
		
		j fim
		
		if:
			sub.d $f2, $f4, $f2
			sub.d $f2, $f2, $f5
			
		fim:
		
		li $t2, 10
		mtc1 $t2, $f6
		cvt.d.w $f5, $f5
		
		c.lt.d $f2, $f5
		bc1f final
		
		j while	
		
		final: 				
			li $v0, 4
			la $a0, msg
			syscall 
			
			li $v0, 3
			mov.d  $f12, $f1
			syscall
