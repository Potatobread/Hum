	*/
}


int main(){
	int i,quant_elem=0,resp2,cont=0;
	int n = 1;
	LLV s;
	tApp aux[T];
	
	for(i=0;i<T;i++){
		s.info[i].tam = 0;
		aux[i].tam = 0;
		strcpy(s.info[i].nome,"");
		strcpy(aux[i].nome,""); 
	}
	
	inicializar(&s);	
	carregar_Arquivos(&aux[0]);
	organizar(&aux[0]);
	
	for(i=0;i<T;i++){
		if(aux[i].tam != 0)
			printf("%d - %s %d\n",i+1,aux[i].nome,aux[i].tam);
	}
	
	printf("\n\n");
	
	while(n != 0){
		printf("Digite o numero do App <0-Sair>: ");
		scanf(" %d", n);
				
		inserir(&s,&aux,n-1);
		
		if(n != 0){
			cont++;
			printf("Adicionado %d\n\n", cont);
			printf("IL: %d\n", s.IL);
			printf("FL: %d\n", s.FL);
			printf("IA: %d\n", s.IA);
			printf("FA: %d\n\n", s.FA);
			printf("QUANTIDADE DE ELEMENTOS DENTRO DE STORE: %d\n\n", s.FL);
		}
		
		printf("Ver a variavel STORE <1-Sim>: ");
		scanf("%d", &resp2);
		if(resp2 == 1){
			for(i=0;i<T;i++){
				printf("%s %d\n", s.info[i].nome,s.info[i].tam);
			}
		}
	}

	printf("\n\n");
	
	printf("IL: %d\n", s.IL);
	printf("FL: %d\n", s.FL);
	printf("IA: %d\n", s.IA);
	printf("FA: %d\n", s.FA);
	
	return 0;
}
