# include <stdio.h>
# define P 3

int main(){
	int arm1[P],arm2[P],arm3[P],valor[P],i,total=0,valor_geral=0;
	int tot_geral1,tot_geral2,tot_geral3;
	
	for(i=0; i<P; i++){
		printf("Digite a quantidade do produto %d do Armazem 1: ", i+1);
		scanf(" %d", &arm1[i]);
	}
	printf("\n");
	for(i=0; i<P; i++){
		printf("Digite a quantidade do produto %d do Armazem 2: ", i+1);
		scanf(" %d", &arm2[i]);
	}
	printf("\n");	
	for(i=0; i<P; i++){
		printf("Digite a quantidade do produto %d do Armazem 3: ", i+1);
		scanf(" %d", &arm3[i]);
	}
	printf("\n");
		
	for(i=0; i<P; i++){
		printf("Digite o valor do produto %d: ", i+1);
		scanf(" %d", &valor[i]);
	}
	printf("\n");
	
	for(i=0; i<P; i++){
		printf("Quntidade do produto %d do Armazem 1 eh %d\n", i+1,arm1[i]);
 		printf("Quntidade do produto %d do Armazem 2 eh %d\n", i+1,arm2[i]);
		printf("Quntidade do produto %d do Armazem 3 eh %d\n", i+1,arm3[i]);
		printf("\n");
	}
	
	for(i=0; i<P; i++){
		total += arm1[i];
		valor_geral += valor[i];
	}
	tot_geral1 = total * valor_geral;
	
	total = 0;
	valor_geral = 0;
	for(i=0; i<P; i++){
		total += arm2[i];
		valor_geral += valor[i];
	}
	tot_geral2 = total * valor_geral;
	
	total = 0;
	valor_geral = 0;
	for(i=0; i<P; i++){
		total += arm3[i];
		valor_geral += valor[i];
	}
	tot_geral3 = total * valor_geral;
	
	printf("Total do Armazen 1: R$ %d\n", tot_geral1);
	printf("Total do Armazen 2: R$ %d\n", tot_geral2);
	printf("Total do Armazen 3: R$ %d\n", tot_geral3);
					
	return 0;
}
