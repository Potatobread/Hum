#include <stdio.h>

int main(){
    
    float h = 0, numero = 1;

    while(numero != 11){
    	h = h + (numero/(numero * numero));
    	
    	if(numero > 0){
			numero = -numero;
			numero--;
		} else {
			numero = -numero;
			numero++;
		}
	}
	
	printf("H: %.4f\n", h);
    
    return 0;
}


.data
	h: .asciiz "\nH: "
	zero: .float 0.0
	um: .float 1.0
	float1: .float 11.0
	
.text
	l.s $f1, zero
	l.s $f2, um
	l.s $f3, um
	l.s $f4, um
	l.s $f7, float1
	
	# $f1 = h = 0
	# $f2 = numero = 1
	# $f3 = 1
	# $f4 = 0
	# $f7 = 11.0
	
	while: 
		mul.s $f5, $f2, $f2
		div.s $f6, $f2, $f5
		add.s $f1, $f1, $f6
			
		c.lt.s $f2, $f4
		bc1f if
		
		neg.s $f2,$f2
		add.s $f2, $f2, $f3
		
		j fim
		
		if:
			neg.s $f2,$f2
		        sub.s $f2, $f2, $f3
		
		fim:        
		
	c.lt.s $f2, $f7
	bc1f final
	
	j while
	
	final:
		li $v0, 4
		la $a0, h
		syscall
	
		li $v0, 2
		mov.s $f12, $f1
		syscall
