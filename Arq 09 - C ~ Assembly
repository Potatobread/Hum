#include <stdio.h>

int main(){
    
    int n, soma = 0, total = 0, media;

	printf("Digite um Numero: ");
	scanf("%d", &n);
   	while(n > 0){
    		if(n % 2 != 0){
				total++;
				soma = soma + n;
		}			
		n--;
	}
	
	media = soma/total;
	printf("Media: %d\n", media);
    
    return 0;
}


.data
	numero: .asciiz "Digite um Numero: "
	media: .asciiz "\nMedia: "
	
.text
	move $t1, $zero		# soma = 0
	move $t2, $zero		# total = 0
	
	li $v0, 4	
	la $a0, numero
	syscall		

	li $v0,5	
	syscall		
	move $t0, $v0	
		
	while:
		li $t3,2
		div $t0, $t3
		mfhi $s1
		bne $s1, $zero, if
		
		subi $t0, $t0, 1
		
		j fim
		
		if:
			addi $t2, $t2, 1
			add $t1, $t1, $t0
			
			subi $t0, $t0, 1
		fim:
		
		slti $t3, $t0, 1
		beq $t3, 1, final
		
		j while	
		
		final: 				
			li $v0, 4
			la $a0, media
			syscall 
			
			div $t3, $t1, $t2
			
			li $v0, 1
			move $a0, $t3
			syscall
