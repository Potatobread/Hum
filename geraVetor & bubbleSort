void geraVetor(int a[], int b[], int c[], int n){
	int i;
	
	srand(time(NULL));
    for (i=0; i < n; i++){
    	a[i] = rand() % 100;
    	b[i] = i+1;
    	c[i] = n-i;
	}	
}


void bubbleSort(int a[], int n){
	int k,j,aux;
	
	for(k = 1; k < n; k++){
		for(j = 0; j < n - k; j++){
			if(a[j] > a[j+1]){
				aux = a[j];
				a[j] = a[j+1];
				a[j+1] = aux;
			}
		}
	}	
}


int i,c;
    
	printf("Comprimento: ");
	scanf("%d", &c);
